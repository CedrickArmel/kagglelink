{
    "name": "Kaggle Dev Environment",
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        // Add more extensions here
    ],
    "settings": {
        "python.pythonPath": "/opt/conda/bin/python", // Adjust according to your environment
        "editor.formatOnSave": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.flake8Enabled": true,
        "python.languageServer": "Pylance"
        // Add more settings here
    },
    "postCreateCommand": "sh ./install_extensions_and_settings.sh"
}

